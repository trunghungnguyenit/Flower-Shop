rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to images
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only allow writes from admin/backend
    }
    
    // Block all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
